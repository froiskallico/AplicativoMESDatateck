#:kivy 1.0

BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: 0.2

        orientation: 'horizontal'

        Image:
            source: './src/images/logos/simboloDtk.png'
            size_hint: (0.2, 1)

        Label:
            text: 'MENU DE CONFIGURAÇÕES'
            font_name: './src/fonts/Play-Bold.ttf'
            font_size: 36

    BoxLayout:
        size_hint_y: 0.2
        padding: 20
        spacing: 10

        Label:
            text: 'Máquina:'
            font_name: './src/fonts/Play-Regular.ttf'
            font_size: 24

        Spinner:
            id: maqSelector
            values: 'CLN-06', 'SAMEC'

        Label:

    BoxLayout:
        size_hint_y: 0.2
        padding: 20
        spacing: 10

        Label:
            text: 'Limite Diário de Circuitos:'
            font_name: './src/fonts/Play-Regular.ttf'
            font_size: 16

        Slider:
            id: limiteDiario
            min: 500
            max: 20000
            step: 500
            value: 8000
            orientation: 'horizontal'

        Label:
            text: '{}'.format(limiteDiario.value)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        spacing: 40
        padding: 10

        Button:
            text: 'Confirmar'
            size: (100, 50)


        Button:
            text: 'Cancelar'
            size: (100, 50)



